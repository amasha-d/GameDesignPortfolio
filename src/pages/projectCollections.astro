              >
                <div class="paper-grid">
                  <div class="paper-page left">
                    <div class="card-list">
                      {spread.slice(0, 2).map((project, idx) => (
                        <section class="project-stack">
                          <div
                            class={`project-card ${idx % 2 === 1 ? "reverse" : ""}`}
                          >
                            <div class="photo">
                              <img src={project.image} alt={project.title} />
                            </div>
                            <div class="content">
                              <h2>{project.title}</h2>
                              <p>{project.description}</p>
                              <a class="see-full" href={project.link}>
                                See full
                              </a>
                            </div>
                            {idx === 0 && (
                              <span class="decor-star" aria-hidden="true" />
                            )}
                          </div>
                          <div class="tag-row">
                            {project.tags.map((tag) => (
                              <span class="tag-chip">{tag}</span>
                            ))}
                          </div>
                        </section>
                      ))}
                    </div>
                  </div>
                  <div class="paper-page">
                    <div class="card-list">
                      {spread.slice(2, 4).map((project, idx) => (
                        <section class="project-stack">
                          <div
                            class={`project-card ${idx % 2 === 0 ? "reverse" : ""}`}
                          >
                            <div class="photo">
                              <img src={project.image} alt={project.title} />
                            </div>
                            <div class="content">
                              <h2>{project.title}</h2>
                              <p>{project.description}</p>
                              <a class="see-full" href={project.link}>
                                See full
                              </a>
                            </div>
                          </div>
                          <div class="tag-row">
                            {project.tags.map((tag) => (
                              <span class="tag-chip">{tag}</span>
                            ))}
                          </div>
                        </section>
                      ))}
                    </div>
                  </div>
                </div>
              </article>
            ))
          }
        </div>
        <button
          class="nav-btn next"
          id="nextBtn"
          type="button"
          aria-label="Next spread">&rsaquo;</button
        >
        <div class="page-pill">
          <span id="pageCurrent">1</span>/<span id="pageTotal"
            >{spreads.length}</span
          >
        </div>
      </section>

      <section
        class="book-shell-mobile"
        style={`--book-half-bg:url('${base}img/obj/halfPage.png')`}
      >
        <img
          class="mobile-pins"
          src={`${base}img/obj/pins.png`}
          alt=""
          aria-hidden="true"
        />
        <button
          class="nav-btn prev"
          id="prevBtnMobile"
          type="button"
          aria-label="Previous spread">&lsaquo;</button
        >
        <div class="spreads-mobile" id="spreadsMobile">
          {
            mobileSpreads.map((spread, spreadIndex) => (
              <article
                class={`spread-mobile ${spreadIndex === 0 ? "active" : ""}`}
                data-spread-mobile={spreadIndex}
              >
                <div class="paper-mobile">
                  <div class="card-list-mobile">
                    {spread.map((project, idx) => (
                      <section class="project-stack-mobile">
                        <div
                          class={`project-card-mobile ${idx % 2 === 1 ? "reverse" : ""}`}
                        >
                          <div class="photo">
                            <img src={project.image} alt={project.title} />
                          </div>
                          <div class="content">
                            <h2>{project.title}</h2>
                            <p>{project.description}</p>
                            <a class="see-full" href={project.link}>
                              See full
                            </a>
                          </div>
                        </div>
                        <div class="tag-row">
                          {project.tags.map((tag) => (
                            <span class="tag-chip">{tag}</span>
                          ))}
                        </div>
                      </section>
                    ))}
                  </div>
                </div>
              </article>
            ))
          }
        </div>
        <button
          class="nav-btn next"
          id="nextBtnMobile"
          type="button"
          aria-label="Next spread">&rsaquo;</button
        >
        <div class="page-pill">
          <span id="pageCurrentMobile">1</span>/<span id="pageTotalMobile"
            >{mobileSpreads.length}</span
          >
        </div>
