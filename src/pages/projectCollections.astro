    <script>
      const spreadEls = Array.from(document.querySelectorAll(".spread"));
      const prevBtn = document.getElementById("prevBtn");
      const nextBtn = document.getElementById("nextBtn");
      const pageCurrent = document.getElementById("pageCurrent");
      let spreadIndex = 0;

      function animateSpreadEntry(spreads, index, direction) {
        const active = spreads[index];
        if (!(active instanceof HTMLElement)) return;
        active.classList.remove("flip-in-next", "flip-in-prev");
        void active.offsetWidth;
        active.classList.add(
          direction === "prev" ? "flip-in-prev" : "flip-in-next",
        );
      }

      function renderSpread(nextIndex, direction = "next") {
        const prevIndex = spreadIndex;
        spreadIndex = Math.max(0, Math.min(nextIndex, spreadEls.length - 1));
        spreadEls.forEach((el, idx) =>
          el.classList.toggle("active", idx === spreadIndex),
        );
        if (pageCurrent) pageCurrent.textContent = String(spreadIndex + 1);
        if (prevBtn instanceof HTMLButtonElement) {
          prevBtn.disabled = spreadIndex === 0;
        }
        if (nextBtn instanceof HTMLButtonElement) {
          nextBtn.disabled = spreadIndex === spreadEls.length - 1;
        }
        if (spreadIndex !== prevIndex) {
          animateSpreadEntry(spreadEls, spreadIndex, direction);
        }
        return spreadIndex !== prevIndex;
      }

      prevBtn?.addEventListener("click", () => {
        renderSpread(spreadIndex - 1, "prev");
      });
      nextBtn?.addEventListener("click", () => {
        renderSpread(spreadIndex + 1, "next");
      });

      const spreadElsMobile = Array.from(
        document.querySelectorAll(".spread-mobile"),
      );
      const prevBtnMobile = document.getElementById("prevBtnMobile");
      const nextBtnMobile = document.getElementById("nextBtnMobile");
      const pageCurrentMobile = document.getElementById("pageCurrentMobile");
      const mobileShell = document.querySelector(".book-shell-mobile");
      let spreadIndexMobile = 0;

      function renderSpreadMobile(nextIndex, direction = "next") {
        const prevIndex = spreadIndexMobile;
        spreadIndexMobile = Math.max(
          0,
          Math.min(nextIndex, spreadElsMobile.length - 1),
        );
        spreadElsMobile.forEach((el, idx) =>
          el.classList.toggle("active", idx === spreadIndexMobile),
        );
        if (pageCurrentMobile)
          pageCurrentMobile.textContent = String(spreadIndexMobile + 1);
        if (prevBtnMobile instanceof HTMLButtonElement) {
          prevBtnMobile.disabled = spreadIndexMobile === 0;
        }
        if (nextBtnMobile instanceof HTMLButtonElement) {
          nextBtnMobile.disabled =
            spreadIndexMobile === spreadElsMobile.length - 1;
        }
        if (spreadIndexMobile !== prevIndex) {
          animateSpreadEntry(spreadElsMobile, spreadIndexMobile, direction);
        }
        return spreadIndexMobile !== prevIndex;
      }

      prevBtnMobile?.addEventListener("click", () => {
        renderSpreadMobile(spreadIndexMobile - 1, "prev");
      });
      nextBtnMobile?.addEventListener("click", () => {
        renderSpreadMobile(spreadIndexMobile + 1, "next");
      });

      let swipeStartX = 0;
      let swipeStartY = 0;
      const swipeThreshold = 42;

      mobileShell?.addEventListener(
        "touchstart",
        (e) => {
          const touch = e.changedTouches[0];
          swipeStartX = touch.clientX;
          swipeStartY = touch.clientY;
        },
        { passive: true },
      );

      mobileShell?.addEventListener(
        "touchmove",
        (e) => {
          e.preventDefault();
        },
        { passive: false },
      );

      mobileShell?.addEventListener(
        "touchend",
        (e) => {
          const touch = e.changedTouches[0];
          const dx = touch.clientX - swipeStartX;
          const dy = touch.clientY - swipeStartY;
          const absX = Math.abs(dx);
          const absY = Math.abs(dy);
          if (absX < swipeThreshold && absY < swipeThreshold) return;

          if (absX >= absY) {
            if (dx < 0) {
              renderSpreadMobile(spreadIndexMobile + 1, "next");
            } else {
              renderSpreadMobile(spreadIndexMobile - 1, "prev");
            }
          } else {
            if (dy < 0) {
              renderSpreadMobile(spreadIndexMobile + 1, "next");
            } else {
              renderSpreadMobile(spreadIndexMobile - 1, "prev");
            }
          }
        },
        { passive: true },
      );

      renderSpread(0);
      renderSpreadMobile(0);
    </script>
  </body>
