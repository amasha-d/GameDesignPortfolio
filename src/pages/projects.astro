    }

    75% {
      box-shadow: -4px 8px 20px rgba(0, 0, 0, 0.25);
    }

    100% {
      transform: rotateY(0deg);
      box-shadow: -8px 8px 20px rgba(0, 0, 0, 0.15);
    }
  }

  .book-bg {
    width: 100%;
    height: 100%;
    display: block;
    pointer-events: none;
    user-select: none;
  }

  .page-container {
    position: absolute;
    inset: 0;
  }

  .page {
    position: absolute;
    inset: 0;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.8s ease-in-out;
  }

  .page.active {
    opacity: 1;
    pointer-events: auto;
  }

  .container {
    position: absolute;
    inset: 0;
    padding: 4% 6%;
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-template-rows: 1fr 1fr;
    gap: 2rem;
  }

  /* Project Card */
  .project-card {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .project-header {
    margin-bottom: 1rem;
    font-size: 1.6rem;
    text-align: center;
    z-index: 3;
  }

  figure {
    width: 62%;
    aspect-ratio: 4 / 3;
    background: rgba(173, 216, 230, 0.6);
    box-shadow: -4px 6px 12px var(--shadow);
    border-radius: 8px;
    overflow: hidden;
    position: relative;
    z-index: 1;
  }

  figure img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .project-card.left figure {
    align-self: flex-start;
    margin-right: auto;
    transform: rotate(3deg);
  }

  .project-card.right figure {
    align-self: flex-end;
    transform: rotate(3deg);
  }

  /* Scrapbook Note */
  .project-text {
    position: absolute;
    width: 65%;
    background: var(--card-bg);
    padding: 1rem;
    box-shadow: -6px 8px 14px var(--shadow-deep);
    border-radius: 8px;
    font-size: 1rem;
    line-height: 1.3;
    z-index: 2;
    top: 58%;
  }

  .project-card.left .project-text {
    left: 20%;
    transform: rotate(2deg);
  }

  .project-card.right .project-text {
    right: 20%;
    transform: rotate(-2deg);
    text-align: right;
  }

  /* Page Indicator */
