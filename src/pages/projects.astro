<div class="book-wrapper" id="bookWrapper">
  <img src="/img/obj/Projectbook.png" alt="Project Book" class="book-bg" />

  <div class="page-container" id="pageContainer">
    {Array.from({ length: totalPages }).map((_, pageNum) => (
    <div class={`page ${pageNum===0 ? "active" : "" }`} data-page={pageNum}>
      <div class="container">
        {projects.slice(pageNum * 4, (pageNum + 1) * 4).map((project, index) => (
        <div class={`project-card ${index % 2===0 ? "left" : "right" }`}>
          <div class="project-header">{project.title}</div>
          <figure>
            <img src={project.image} alt={project.title} />
          </figure>
          <div class="project-text">{project.description}</div>
        </div>
        ))}
      </div>
    </div>
    ))}
  </div>

  <div class="page-indicator">
    <span id="currentPage">1</span> / {totalPages}
  </div>
</div>

<script define:vars={{ totalPages }}>
  let currentPage = 0;
  let isAnimating = false;

  const bookWrapper = document.getElementById("bookWrapper");
  const pageContainer = document.getElementById("pageContainer");
  const currentPageDisplay = document.getElementById("currentPage");
  const pages = document.querySelectorAll(".page");

  function showPage(pageNum) {
    if (isAnimating || pageNum < 0 || pageNum >= totalPages) return;

    isAnimating = true;
    bookWrapper.classList.add("flip-animation");

    setTimeout(() => {
      pages.forEach((page) => page.classList.remove("active"));
      pages[pageNum].classList.add("active");
      currentPageDisplay.textContent = pageNum + 1;
      currentPage = pageNum;
      bookWrapper.classList.remove("flip-animation");
      isAnimating = false;
    }, 750);
  }

  function handleWheel(e) {
    e.preventDefault();
    if (isAnimating) return;

    if (e.deltaY > 0 && currentPage < totalPages - 1) {
      showPage(currentPage + 1);
    } else if (e.deltaY < 0 && currentPage > 0) {
      showPage(currentPage - 1);
    }
  }

  bookWrapper.addEventListener("wheel", handleWheel, { passive: false });
</script>

<style is:global>
  @import url('https://fonts.googleapis.com/css?family=Schoolbell&display=swap');

