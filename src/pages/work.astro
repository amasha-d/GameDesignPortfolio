<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Work — Roadmap</title>
    <style>
        :root {
            --nav-width: 320px;
            --bg1: #222;
            --bg2: #444;
            --font: #fff;
            --muted: #ddd;
            --accent: #22a7f0;
        }

        * {
            box-sizing: border-box;
        }

        html,
        body {
            height: 100%;
            margin: 0;
            font-family: "Roboto Slab", serif;
            color: var(--font);
        }

        body {
            background: linear-gradient(to bottom, var(--bg1), var(--bg2));
        }

        .wrapper {
            min-height: 100vh;
            position: relative;
        }

        /* Nav */
        .nav__wrapper {
            position: fixed;
            height: 100%;
            left: 0;
            top: 0;
            padding: 30px;
            display: flex;
            flex-flow: column nowrap;
            justify-content: flex-end;
            width: var(--nav-width);
        }

        .nav {
            list-style: none;
            margin: 0;
            padding: 0 0 100px 30px;
        }

        .nav li {
            position: relative;
            margin-bottom: 1em;
            transition: all 0.3s ease-out;
        }

        .nav li:after {
            content: "";
            display: block;
            border-left: 2px solid var(--font);
            border-top: 2px solid var(--font);
            height: 250px;
            width: 20px;
            position: absolute;
            left: -30px;
            top: 15px;
            opacity: 0.15;
        }

        .nav a {
            display: block;
            color: var(--font);
            text-decoration: none;
            padding: 0;
            transition: all 0.15s ease-out;
        }

        .nav a:hover {
            padding-left: 1em;
        }

        .nav__counter {
            font-size: 24px;
            display: block;
        }

        .nav__title {
            font-size: 32px;
            font-weight: 300;
            margin: 0 0 0.25em;
            width: 300px;
            height: 0;
            overflow: hidden;
            opacity: 0;
            transition:
                height 0.3s,
                opacity 0.2s;
        }

        .nav__body {
            font-weight: 300;
            font-size: 18px;
            width: 300px;
            height: 0;
            overflow: hidden;
            opacity: 0;
            transition:
                height 0.3s,
                opacity 0.2s;
        }

        .nav li.active {
            pointer-events: none;
            padding-left: 1em;
        }

        .nav li.active:after {
            width: 35px;
            height: 400px;
            top: 35px;
        }

        .nav li.active .nav__counter {
            font-size: 48px;
        }

        .nav li.active .nav__title {
            height: 40px;
            opacity: 1;
            overflow: visible;
        }

        .nav li.active .nav__body {
            height: 100px;
            opacity: 1;
            overflow: visible;
        }

        /* Sections */
        .sections {
            margin-left: var(--nav-width);
        }

        .section {
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 40px;
            font-weight: 100;
        }

        .section:nth-child(1) {
            background: #ffffff11;
        }

        .section:nth-child(2) {
            background: #f64747;
        }

        .section:nth-child(3) {
            background: #22a7f0;
        }

        .section:nth-child(4) {
            background: #f9690e;
        }

        .section:nth-child(5) {
            background: #9b59b6;
        }

        .section:nth-child(6) {
            background: #03c9a9;
        }

        /* small screens: nav becomes top horizontal */
        @media (max-width: 900px) {
            .nav__wrapper {
                position: fixed;
                left: 0;
                right: 0;
                top: 0;
                height: auto;
                width: 100%;
                padding: 12px;
                background: linear-gradient(180deg,
                        rgba(0, 0, 0, 0.25),
                        rgba(0, 0, 0, 0.15));
            }

            /* Hide navbar entirely on small phone screens */
            @media (max-width: 600px) {
                .nav__wrapper {
                    display: none !important;
                }

                .nav-toggle {
                    display: none !important;
                }

                .sections {
                    margin-left: 0;
                    margin-top: 0;
                }

                .section {
                    padding: 24px;
                    text-align: center;
                }
            }

            .nav {
                display: flex;
                gap: 18px;
                padding: 0;
                margin: 0 12px 0 0;
                overflow: auto;
            }

            .nav li:after {
                display: none;
            }

            .sections {
                margin-left: 0;
                margin-top: 84px;
            }

            /* show toggle */
            .nav-toggle {
                display: block;
            }

            .nav__wrapper {
                padding-top: 56px;
            }

            .nav {
                gap: 12px;
            }

            .nav a {
                padding: 8px 10px;
            }

            .nav__title {
                display: block;
            }

            .nav__body {
                display: block;
            }
        }

        /* small visual nicety */
        .nav__counter,
        .nav__title,
        .nav__body {
            color: var(--font);
        }

        .nav__title,
        .nav__body {
            background: transparent;
        }

        /* Nav toggle (mobile) */
        .nav-toggle {
            display: none;
            position: absolute;
            left: 12px;
            top: 12px;
            background: transparent;
            border: 1px solid rgba(255, 255, 255, 0.08);
            color: var(--font);
            padding: 8px 10px;
            border-radius: 8px;
            font-size: 18px;
        }

        .nav__wrapper.open {
            background: linear-gradient(180deg, rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.25));
        }

        .nav__wrapper.open .nav {
            display: flex;
            flex-direction: column;
            max-height: 60vh;
            overflow: auto;
            padding: 12px;
        }

        .nav__wrapper.open .nav li {
            margin-bottom: 0.75rem;
        }

        /* Back button (top-left) */
        .back-btn {
            position: fixed;
            left: 12px;
            top: 12px;
            z-index: 1200;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            background: rgba(0, 0, 0, 0.45);
            color: var(--font);
            border: 1px solid rgba(255, 255, 255, 0.06);
            padding: 8px 12px;
            border-radius: 8px;
            text-decoration: none;
            font-size: 16px;
            backdrop-filter: blur(4px);
        }

        .back-btn svg {
            display: inline-block;
            vertical-align: middle;
        }

        /* Scroll indicator (bottom-right) */
        .scroll-indicator {
            position: fixed;
            right: 18px;
            bottom: 18px;
            z-index: 1200;
            width: 64px;
            height: 64px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            opacity: 0.95;
            transition: transform 0.2s ease, opacity 0.2s ease;
        }

        .scroll-indicator img {
            width: 100%;
            height: auto;
            display: block;
            transform-origin: center bottom;
            animation: bobble 1.6s ease-in-out infinite;
        }

        @keyframes bobble {
            0% {
                transform: translateY(0);
            }

            25% {
                transform: translateY(-6px);
            }

            50% {
                transform: translateY(0);
            }

            75% {
                transform: translateY(-3px);
            }

            100% {
                transform: translateY(0);
            }
        }
    </style>
</head>

