<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Work - Roadmap</title>
    <style>
      :root {
        --nav-width: 320px;
        --bg1: #222;
        --bg2: #444;
        --font: #ffffff;
        --font-dark: #1a1a1a;
        --muted: #4a4a4a;
      }

      * {
        box-sizing: border-box;
      }

      html,
      body {
        height: 100%;
        margin: 0;
        font-family: "Roboto Slab", serif;
        color: var(--font);
      }

      html {
        scroll-snap-type: y mandatory;
        scroll-behavior: auto;
        scroll-padding-top: 0;
      }

      @media (prefers-reduced-motion: reduce) {
        html {
          scroll-snap-type: none;
        }
      }

      body {
        background: linear-gradient(to bottom, var(--bg1), var(--bg2));
      }

      .wrapper {
        min-height: 100vh;
        position: relative;
      }

      .nav__wrapper {
        position: fixed;
        height: 100%;
        left: 0;
        top: 0;
        padding: 30px;
        display: flex;
        flex-flow: column nowrap;
        justify-content: flex-end;
        width: var(--nav-width);
      }

      .nav {
        list-style: none;
        margin: 0;
        padding: 0 0 100px 30px;
      }

      .nav li {
        position: relative;
        margin-bottom: 1em;
        transition: all 0.3s ease-out;
      }

      .nav li:after {
        content: "";
        display: block;
        border-left: 2px solid var(--font);
        border-top: 2px solid var(--font);
        height: 250px;
        width: 20px;
        position: absolute;
        left: -30px;
        top: 15px;
        opacity: 0.15;
      }

      .nav a {
        display: block;
        color: var(--font);
        text-decoration: none;
        padding: 0;
        transition: all 0.15s ease-out;
      }

      .nav a:hover {
        padding-left: 1em;
      }

      .nav__counter {
        font-size: 24px;
        display: block;
      }

      .nav__title {
        font-size: 32px;
        font-weight: 300;
        margin: 0 0 0.25em;
        width: 300px;
        height: 0;
        overflow: hidden;
        opacity: 0;
        transition:
          height 0.3s,
          opacity 0.2s;
      }

      .nav__body {
        font-weight: 300;
        font-size: 18px;
        width: 300px;
        height: 0;
        overflow: hidden;
        opacity: 0;
        transition:
          height 0.3s,
          opacity 0.2s;
      }

      .nav li.active {
        pointer-events: none;
        padding-left: 1em;
      }

      .nav li.active:after {
        width: 35px;
        height: 400px;
        top: 35px;
      }

      .nav li.active .nav__counter {
        font-size: 48px;
      }

      .nav li.active .nav__title {
        height: 40px;
        opacity: 1;
        overflow: visible;
      }

      .nav li.active .nav__body {
        height: 100px;
        opacity: 1;
        overflow: visible;
      }

      .sections {
        margin-left: var(--nav-width);
      }

      .section {
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: flex-start;
        padding-left: clamp(24px, 6vw, 80px);
        padding-right: clamp(24px, 6vw, 80px);
        font-size: 40px;
        font-weight: 100;
        scroll-snap-align: start;
        scroll-snap-stop: always;
        color: var(--font-dark);
        text-shadow:
          0 1px 3px rgba(255, 255, 255, 0.9),
          0 0 20px rgba(255, 255, 255, 0.5);
      }

      .section__content {
        max-width: 45%;
        min-width: 280px;
      }

      .section:nth-child(1) {
        background:
          linear-gradient(rgba(0, 0, 0, 0.2), rgba(0, 0, 0, 0.2)),
          url("/img/work/design.png") right bottom / 70vh no-repeat,
          #ffffff;
      }

      .section:nth-child(2) {
        background:
          linear-gradient(rgba(0, 0, 0, 0.2), rgba(0, 0, 0, 0.2)),
          url("/img/work/creativity.png") right bottom / 70vh no-repeat,
          #ffffff;
      }

      .section:nth-child(3) {
        background:
          linear-gradient(rgba(0, 0, 0, 0.2), rgba(0, 0, 0, 0.2)),
          url("/img/work/dev.png") right bottom / 70vh no-repeat,
          #ffffff;
      }

      .section:nth-child(4) {
        background:
          linear-gradient(rgba(0, 0, 0, 0.2), rgba(0, 0, 0, 0.2)),
          url("/img/work/gaming.png") right bottom / 70vh no-repeat,
          #ffffff;
      }

      .section:nth-child(5) {
        background:
          linear-gradient(rgba(0, 0, 0, 0.2), rgba(0, 0, 0, 0.2)),
          url("/img/work/illustration.png") right bottom / 70vh no-repeat,
          #ffffff;
      }

      .section:nth-child(6) {
        background:
          linear-gradient(rgba(0, 0, 0, 0.2), rgba(0, 0, 0, 0.2)),
          url("/img/work/illustration.png") right bottom / 70vh no-repeat,
          #ffffff;
      }

      .section:nth-child(6) .section__content {
        max-width: 80%;
      }

      .section small {
        color: var(--muted);
        font-weight: 400;
        text-shadow: 0 1px 2px rgba(255, 255, 255, 0.8);
      }

      .section:nth-child(6) small {
        color: rgba(255, 255, 255, 0.95);
        text-shadow: 0 1px 3px rgba(0, 0, 0, 0.4);
      }

      @media (max-width: 900px) {
        .section__content {
          max-width: 55%;
        }

        .section:nth-child(1),
        .section:nth-child(2),
        .section:nth-child(3),
        .section:nth-child(4),
        .section:nth-child(5) {
          background-size: 45vh;
          background-position: right bottom;
        }
      }

      @media (max-width: 900px) {
        .nav__wrapper {
          position: fixed;
          left: 0;
          right: 0;
          top: 0;
          height: auto;
          width: 100%;
          padding: 12px;
          background: linear-gradient(
            180deg,
            rgba(0, 0, 0, 0.25),
            rgba(0, 0, 0, 0.15)
          );
        }

        .nav {
          display: flex;
          gap: 18px;
          padding: 0;
          margin: 0 12px 0 0;
          overflow: auto;
        }

        .nav li:after {
          display: none;
        }

        .sections {
          margin-left: 0;
          margin-top: 84px;
        }

        .nav-toggle {
          display: block;
        }

        .nav__wrapper {
          padding-top: 56px;
        }

        .nav a {
          padding: 8px 10px;
        }
      }

      @media (max-width: 600px) {
        .nav__wrapper,
        .nav-toggle {
          display: none !important;
        }

        .sections {
          margin-left: 0;
          margin-top: 0;
        }

        .section {
          padding: 24px 20px 140px;
          text-align: left;
          justify-content: flex-start;
          flex-direction: column;
          font-size: 28px;
        }

        .section__content {
          max-width: 100%;
          min-width: unset;
          text-align: center;
        }

        .section:nth-child(1),
        .section:nth-child(2),
        .section:nth-child(3),
        .section:nth-child(4),
        .section:nth-child(5) {
          background-size: 38vh;
          background-position: center bottom 20px;
        }
      }

      .nav-toggle {
        display: none;
        position: absolute;
        left: 12px;
        top: 12px;
        background: transparent;
        border: 1px solid rgba(255, 255, 255, 0.08);
        color: var(--font);
        padding: 8px 10px;
        border-radius: 8px;
        font-size: 18px;
      }

      .nav__wrapper.open {
        background: linear-gradient(
          180deg,
          rgba(0, 0, 0, 0.5),
          rgba(0, 0, 0, 0.25)
        );
      }

      .nav__wrapper.open .nav {
        display: flex;
        flex-direction: column;
        max-height: 60vh;
        overflow: auto;
        padding: 12px;
      }

      .back-btn {
        position: fixed;
        left: 12px;
        top: 12px;
        z-index: 1200;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        background: rgba(255, 255, 255, 0.92);
        color: #1a1a1a;
        border: 1px solid rgba(0, 0, 0, 0.1);
        padding: 8px 12px;
        border-radius: 8px;
        text-decoration: none;
        font-size: 16px;
        font-family: "Schoolbell", cursive;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
      }

      .scroll-indicator {
        position: fixed;
        right: 18px;
        bottom: 18px;
        z-index: 1200;
        width: 64px;
        height: 64px;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        opacity: 0.95;
        transition:
          transform 0.2s ease,
          opacity 0.2s ease;
      }

      .scroll-indicator img {
        width: 100%;
        height: auto;
        display: block;
        transform-origin: center bottom;
        animation: bobble 1.6s ease-in-out infinite;
      }

      @keyframes bobble {
        0% {
          transform: translateY(0);
        }
        25% {
          transform: translateY(-6px);
        }
        50% {
          transform: translateY(0);
        }
        75% {
          transform: translateY(-3px);
        }
        100% {
          transform: translateY(0);
        }
      }
    </style>
  </head>
  <body>
    <div class="wrapper">
      <a
        href="/"
        class="back-btn"
        aria-label="Go back"
        onclick="if(history.length>1){event.preventDefault();history.back();}"
      >
        <svg
          width="18"
          height="18"
          viewBox="0 0 24 24"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
          aria-hidden="true"
        >
          <path
            d="M15 18l-6-6 6-6"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"></path>
        </svg>
        Back
      </a>

      <nav class="nav__wrapper" id="navbar-example">
        <button
          class="nav-toggle"
          aria-expanded="false"
          aria-label="Open navigation">Menu</button
        >
        <ul class="nav">
          <li role="presentation" class="active">
            <a href="#section1"
              ><span class="nav__counter">2025</span><h3 class="nav__title">
                Current
              </h3></a
            >
          </li>
          <li role="presentation">
            <a href="#section2"
              ><span class="nav__counter">2024</span><h3 class="nav__title">
                Collab Work
              </h3><p class="nav__body">Senior Visual and UX period.</p></a
            >
          </li>
          <li role="presentation">
            <a href="#section3"
              ><span class="nav__counter">2022</span><h3 class="nav__title">
                Product Push
              </h3><p class="nav__body">Lead Designer period.</p></a
            >
          </li>
          <li role="presentation">
            <a href="#section4"
              ><span class="nav__counter">2020</span><h3 class="nav__title">
                Side Projects
              </h3><p class="nav__body">Independent work.</p></a
            >
          </li>
          <li role="presentation">
            <a href="#section5"
              ><span class="nav__counter">2019</span><h3 class="nav__title">
                Growing Team
              </h3><p class="nav__body">Associate Designer details.</p></a
            >
          </li>
          <li role="presentation">
            <a href="#section6"
              ><span class="nav__counter">2018</span><h3 class="nav__title">
                Early Studio
              </h3><p class="nav__body">Timeline-style navigation.</p></a
            >
          </li>
        </ul>
      </nav>

      <div class="sections">
        <section class="section" id="section1">
          <div class="section__content">
            2025 - Present<br /><small
              >Lead Level Designer for LostSoulsInteractive</small
            >
          </div>
        </section>
        <section class="section" id="section2">
          <div class="section__content">
            2024 - Collab Work<br /><small>Lorem ipsum dolor sit amet.</small>
          </div>
        </section>
        <section class="section" id="section3">
          <div class="section__content">
            2022 - Product Push<br /><small>Lorem ipsum dolor sit amet.</small>
          </div>
        </section>
        <section class="section" id="section4">
          <div class="section__content">
            2020 - Side Projects<br /><small>Lorem ipsum dolor sit amet.</small>
          </div>
        </section>
        <section class="section" id="section5">
          <div class="section__content">
            2019 - Growing Team<br /><small>Lorem ipsum dolor sit amet.</small>
          </div>
        </section>
        <section class="section" id="section6">
          <div class="section__content">
            2018 - Early Studio<br /><small>Timeline-style navigation.</small>
          </div>
        </section>
      </div>
    </div>

    <div
      class="scroll-indicator"
      role="button"
      aria-label="Scroll down"
      tabindex="0"
    >
      <img src="/img/obj/Scroll.png" alt="Scroll down" />
    </div>

    <script>
      const navLinks = Array.from(
        document.querySelectorAll('.nav a[href^="#"]'),
      );
      const navItems = Array.from(document.querySelectorAll(".nav li"));
      const sections = Array.from(document.querySelectorAll(".section"));
      const navWrapper = document.querySelector(".nav__wrapper");
      const navToggle = document.querySelector(".nav-toggle");

      function setActiveById(id: string) {
        navItems.forEach((li) => li.classList.remove("active"));
        const link = document.querySelector('.nav a[href="#' + id + '"]');
        if (link) {
          const li = link.closest("li");
          if (li) li.classList.add("active");
        }
      }

      navLinks.forEach((link) => {
        link.addEventListener("click", (e) => {
          const href = link.getAttribute("href");
          if (!href || !href.startsWith("#")) return;
          const id = href.slice(1);
          const target = document.getElementById(id);
          if (!target) return;
          e.preventDefault();
          target.scrollIntoView({ behavior: "auto", block: "start" });
          history.pushState
            ? history.pushState(null, "", "#" + id)
            : (location.hash = "#" + id);
          setActiveById(id);
        });
      });

      if (navToggle && navWrapper) {
        navToggle.addEventListener("click", () => {
          const open = navWrapper.classList.toggle("open");
          navToggle.setAttribute("aria-expanded", open ? "true" : "false");
        });
      }

      if ("IntersectionObserver" in window) {
        const io = new IntersectionObserver(
          (entries) => {
            entries.forEach((entry) => {
              if (entry.isIntersecting) {
                setActiveById(entry.target.id);
              }
            });
          },
          { threshold: 0.55 },
        );
        sections.forEach((s) => io.observe(s));
      }

      const scrollIndicator = document.querySelector(".scroll-indicator");
      if (scrollIndicator instanceof HTMLElement) {
        const jumpFirst = () => {
          if (sections.length)
            sections[0].scrollIntoView({ behavior: "auto", block: "start" });
        };
        scrollIndicator.addEventListener("click", jumpFirst);
        scrollIndicator.addEventListener("keypress", (e) => {
          if (e.key === "Enter" || e.key === " ") {
            e.preventDefault();
            jumpFirst();
          }
        });
        const hideOnScroll = () => {
          if (window.scrollY > window.innerHeight * 0.15) {
            scrollIndicator.style.opacity = "0";
            scrollIndicator.style.pointerEvents = "none";
          } else {
            scrollIndicator.style.opacity = "0.95";
            scrollIndicator.style.pointerEvents = "";
          }
        };
        window.addEventListener("scroll", hideOnScroll, { passive: true });
        hideOnScroll();
      }
    </script>
  </body>
</html>
