    <script>
        // Smooth scroll + scrollspy (vanilla)
        const navLinks = Array.from(document.querySelectorAll('.nav a[href^="#"]'));
        const navItems = Array.from(document.querySelectorAll('.nav li'));
        const sections = Array.from(document.querySelectorAll('.section'));
        const navWrapper = document.querySelector('.nav__wrapper');
        const navToggle = document.querySelector('.nav-toggle');

        function setActiveById(id) {
            navItems.forEach((li) => li.classList.remove("active"));
            const link = document.querySelector('.nav a[href="#' + id + '"]');
            if (link) link.closest("li").classList.add("active");
        }

        navLinks.forEach((link) => {
            if (link.getAttribute("href") === "#") return;
            link.addEventListener("click", (e) => {
                const href = link.getAttribute("href");
                if (!href || !href.startsWith("#")) return;
                const id = href.slice(1);
                const target =
                    document.getElementById(id) ||
                    document.querySelector('[name="' + id + '"]');
                if (target) {
                    // Mobile UX: if nav is full-width (mobile), first tap should activate the item
                    if (window.innerWidth <= 900) {
                        const li = link.closest('li');
                        if (!li.classList.contains('active')) {
                            e.preventDefault();
                            setActiveById(id);
                            // keep nav open for reading; user can tap again to navigate
                            return;
                        }
                    }
                    e.preventDefault();
                    target.scrollIntoView({ behavior: 'smooth', block: 'start' });
                    history.pushState ? history.pushState(null, '', '#' + id) : (location.hash = '#' + id);
                    setActiveById(id);
                    // on mobile, collapse nav after navigation
                    if (window.innerWidth <= 900 && navWrapper.classList.contains('open')) {
                        navWrapper.classList.remove('open');
                        navToggle.setAttribute('aria-expanded', 'false');
                    }
                }
            });
        });

        // Toggle nav on small screens
        if (navToggle) {
            navToggle.addEventListener('click', () => {
                const open = navWrapper.classList.toggle('open');
                navToggle.setAttribute('aria-expanded', open ? 'true' : 'false');
            });
            // close when clicking outside
            document.addEventListener('click', (e) => {
                if (!navWrapper.contains(e.target) && navWrapper.classList.contains('open')) {
                    navWrapper.classList.remove('open');
                    navToggle.setAttribute('aria-expanded', 'false');
                }
            });
        }

        if ("IntersectionObserver" in window) {
            const io = new IntersectionObserver(
                (entries) => {
                    entries.forEach((entry) => {
                        if (entry.isIntersecting) {
                            setActiveById(entry.target.id);
                            history.replaceState &&
                                history.replaceState(null, "", "#" + entry.target.id);
                        }
                    });
                },
                { threshold: 0.55 },
            );
            sections.forEach((s) => io.observe(s));
        } else {
            const onScroll = () => {
                let found = false;
                for (const s of sections) {
                    const rect = s.getBoundingClientRect();
                    if (
                        rect.top <= window.innerHeight * 0.4 &&
                        rect.bottom >= window.innerHeight * 0.4
                    ) {
                        setActiveById(s.id);
                        found = true;
                        break;
                    }
                }
                if (!found) navItems.forEach((li) => li.classList.remove("active"));
            };
            window.addEventListener("scroll", onScroll, { passive: true });
            window.addEventListener("load", onScroll);
        }

        window.addEventListener("load", () => {
            const hash = location.hash.replace("#", "");
            if (hash) setActiveById(hash);
            else if (sections.length) setActiveById(sections[0].id);
        });

        // Back button is handled inline (history.back) — add keyboard/click support for scroll indicator
        const scrollIndicator = document.querySelector('.scroll-indicator');
        if (scrollIndicator) {
            const scrollToFirst = () => {
                if (sections && sections.length) {
                    sections[0].scrollIntoView({ behavior: 'smooth', block: 'start' });
                }
            };
            scrollIndicator.addEventListener('click', scrollToFirst);
            scrollIndicator.addEventListener('keypress', (e) => {
                if (e.key === 'Enter' || e.key === ' ') {
                    e.preventDefault();
                    scrollToFirst();
                }
            });
            // hide once user scrolls past the first viewport
            const hideOnScroll = () => {
                if (window.scrollY > window.innerHeight * 0.15) {
                    scrollIndicator.style.opacity = '0';
                    scrollIndicator.style.pointerEvents = 'none';
                } else {
                    scrollIndicator.style.opacity = '0.95';
                    scrollIndicator.style.pointerEvents = '';
                }
            };
            window.addEventListener('scroll', hideOnScroll, { passive: true });
            hideOnScroll();
        }
    </script>
